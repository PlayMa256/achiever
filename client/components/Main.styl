@import "../styles/_colours.styl"
@import "../styles/_standards.styl"

* 
	font-family: 'Arial', sans-serif
	color: commonTextColour
	margin: 0
	padding: 0
	border: 0
	vertical-align: baseline
	box-sizing border-box

html,body
	height 100%

body
	background-color: transitionColour3

a, button
	transition linear all .2s

input, select
	border: 2px solid #fff
	transition: background linear .2s, border linear .2s
	&:focus
		outline: none
		border-color: focusColour
	&[disabled]
		background: white
		opacity: .6

#root
	height: 100%

.root-container
	display: flex
	flex-direction: row
	height 100%
	@media (max-width: 775px)
		flex-direction: column

	.column
		justify-content: center
		&-nav
			height 100%
			width: 30%
			background: transitionColour2
			@media (max-width: 775px)
				width: 100%
			&:before
				content ' '
				display block
				background transitionColour1
				width 100%
				height topBarWidth
		&-actions
			height 100%
			width: 70%
			@media (max-width: 775px)
				width: 100%
			&:before
				content ' '
				display block
				background transitionColour2
				width 100%
				height topBarWidth

h2
	font-size 18px
	//background transitionColour2
	color transitionColour1
	padding 32px 10% 27px
	border-bottom: 1px solid transitionColour2
	strong
		color white
		font-size 24px

main
	margin 0 10%;

.send
	font-size: 24px
	display: block
	font-weight: bold
	margin: 10px 0 0 70px
	width: 230px
	height: 64px
	background-color: darkBlueColour
	color: #fff
	cursor: pointer
	&:focus
		outline: none
		border: focusColour solid 2px;
		text-shadow: 0 0 10px rgba(255,255,255, .6)
	&:hover
		background-color: transitionColour1
	&[disabled]
		opacity: .5

button.send-login
	padding: 11px;
	width: 100%;
	margin: 0;
	font-size: 19px;
	height: 45px;