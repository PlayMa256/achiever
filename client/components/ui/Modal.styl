@import "../../styles/_colours.styl"

.modal-layer
	display: none
	&.active
		display: flex
		align-items: center
		justify-content: center
		position: fixed
		top: 0
		left: 0
		width: 100%
		height: 100%
		z-index 100
		background: rgba(0,0,0, .3)

.modal
	background: white
	padding: 20px 30px
	color: #777
	border-radius: 5px
	box-shadow: 2px 2px 10px rgba(0,0,0,.3)
	min-width: 300px
	position relative
	.close
		position absolute
		right 10px
		top 14px
		color transitionColour2
		font-size 30px
		line-height: 10px
		font-weight: bold

	.title
		font-size: 20px
		padding-bottom: 10px
		font-weight: bold
		color: darkBlueColour
	.content
		font-size: 16px
	.buttons
		padding: 10px 0 0
		display: flex
		align-items: right
		justify-content: flex-end
		button
			padding: 8px 12px
			border-radius: 5px
			background-color: darkBlueColour
			color: white
			font-size: 16px
			margin-left: 12px;
			&[disabled]
				opacity: .5

	.modal-field
		margin: 5px 0
		label
			font-size: 12px
		input, select
			display block
			background: transitionColour3
			padding: 4px 6px
			margin 0 auto