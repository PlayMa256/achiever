@import "../../styles/_colours.styl"
	
.input-time-group
	min-height: 70px;
	clear: both;

	.label
		width 60px
		margin-right 10px
		font-size 11px
		float left
		text-align right
		clear: both;
		height: 52px;
		display: flex;
		flex-direction: column;
		justify-content: center;
	
	.separator
		display: block;
		font-size: 24px;
		float: left;
		width: 10px;
		text-align: center;
		margin: 10px 8px;

	input
		display: block;
		float: left;
		font-size: 30px;
		padding: 6px 12px;
		width: 102px;
			

.InputTime input::placeholder
	color: fadedTextColour;

