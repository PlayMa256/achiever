@import "../../styles/_colours.styl"

.user-details
	position: absolute
	top 0
	right 20px
	background transitionColour1
	text-align:center
	overflow: hidden
	height 29px
	transition: all ease-in .5s

	&:hover
		height 64px

	.employee-name
		padding: 10px
		font-weight: bold;
		color transitionColour3
		font-size: 12px;

	button
		background-color: transitionColour2
		text-transform: lowercase
		padding 2px 6px
		color white;
		cursor pointer
		&:hover
			background-color: transitionColour3
		&:focus
			outline: 1px solid focusColour
