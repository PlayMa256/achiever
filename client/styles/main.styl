@import "_colours.styl"
@import "_standards.styl"

* 
	font-family: 'Arial', sans-serif
	color: commonTextColour
	margin: 0
	padding: 0
	border: 0
	vertical-align: baseline

body
	background-color: backgroundColour

a, button
	transition linear all .2s

input
	box-style()
	transition: background linear .2s, border linear .2s;
	&:focus
		outline: none;
		background-color: focusInputColour;
		box-shadow: none;
		border-color: transitionColour2;

.column
	width: calc(50% - 20px);
	float: left;
	padding: 0 10px;

.projection
	color: secondaryTextColour;
	font-size: 12px;

	strong
		color: secondaryTextColour;

.send[disabled]
	opacity: 0.5;

.time-management-container
	padding-bottom: 40px;

.time-management-content:first-of-type
	padding-right: 80px;

.send
	cta-style();

.page-not-found
	.send
		margin: 30px 0 0 0;