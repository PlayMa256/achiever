@import "_colours.styl"
@import "_standards.styl"

* 
	font-family: 'Arial', sans-serif
	color: commonTextColour
	margin: 0
	padding: 0
	border: 0
	vertical-align: baseline

body
	background-color: backgroundColour

a, button
	transition linear all .2s

input
	box-style()
	transition: background linear .2s, border linear .2s;
	&:focus
		outline: none;
		background-color: focusInputColour;
		box-shadow: none;
		border-color: transitionColour2;

.column
	width: calc(50% - 20px);
	float: left;
	padding: 0 10px;

.projection
	color: secondaryTextColour;
	font-size: 12px;

	strong
		color: secondaryTextColour;

.send[disabled]
	opacity: 0.5;

.time-management-container
	padding-bottom: 40px;

.time-management-content:first-of-type
	padding-right: 80px;

.send
	font-size: 24px;
	display: block;
	font-weight: bold;
	margin: 10px 0 0 70px;
	width: 232px;
	height: 64px;
	background-color: darkBlueColour;
	color: #fff;
	border-radius: 5px;

.select-group
	min-height: 40px;
	label
		label-style();
	select
		box-style();
		width: 230px;
		font-size: 18px;
		padding: 4px;
		background-color: white;
		margin-bottom: 20px;

.page-not-found
	.send
		margin: 30px 0 0 0;